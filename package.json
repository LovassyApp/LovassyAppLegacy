{
    "name": "lovassy-app",
    "contributors": [
        "Nándor Ocskó <ocskon@gmail.com>",
        "Máté Gyimesi <gyim.mate@gmail.com>"
    ],
    "private": true,
    "devDependencies": {
        "husky": "^7.0.0",
        "lerna": "^4.0.0",
        "lint-staged": "^12.1.4"
    },
    "lint-staged": {
        "apps/boardlight-mobile/**.js": [
            "yarn --cwd apps/boardlight-mobile run lint"
        ],
        "apps/boardlight-mobile/**": [
            "yarn --cwd apps/boardlight-mobile run format"
        ],
        "apps/boardlight/**.js": [
            "yarn --cwd apps/boardlight run lint"
        ],
        "apps/boardlight/**.jsx": [
            "yarn --cwd apps/boardlight run lint"
        ]
    },
    "scripts": {
        "prepare": "husky install",
        "docker-build": "docker-compose -f \"docker/docker-compose.yml\" build blueboard && docker-compose -f \"docker/docker-compose.yml\" build",
        "docker-start": "docker-compose -f \"docker/docker-compose.yml\" up",
        "docker-shell": "docker-compose -f \"docker/docker-compose.yml\" run blueboard-shell",
        "docker-down": "docker-compose -f \"docker/docker-compose.yml\" down --volumes -t 0"
    }
}
